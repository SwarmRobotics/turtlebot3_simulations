<?xml version="1.0"?>
<launch>

  <arg name="robot_num" default="0"/>
  <arg name="x_pos" default="0.0"/>
  <arg name="y_pos" default="0.0"/>
  <arg name="z_pos" default="0.0"/>


  <param name="robot_description" command="$(find xacro)/xacro $(find turtlebot3_description)/urdf/turtlebot3_burger.urdf.xacro" />



  
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="log">
      <param name="publish_frequency" type="double" value="50.0" />
      <param name="tf_prefix" value="burger_$(arg robot_num)" />
  </node>
   
  <include file="$(find turtlebot3_teleop)/launch/turtlebot3_teleop_key.launch"/>
 
  <node pkg="tf" type="static_transform_publisher" name="asdf" args="0 0 0 0 0 0  burger_$(arg robot_num)/base_link base_link 100" />

  <node name="spawn_urdf_$(arg robot_num)" pkg="gazebo_ros" type="spawn_model" args="-urdf -model burger_$(arg robot_num) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description"/>



</launch>


